# Azure OpenAI Configuration
spring.ai.azure.openai.api-key=your-api-key-here
spring.ai.azure.openai.endpoint=your-endpoint-here
spring.ai.azure.openai.chat.model=your-chat-model
spring.ai.azure.openai.embedding.model=your-embedding-model
spring.ai.azure.openai.chat.api-version=2025-01-01-preview
spring.ai.azure.openai.embedding.api-version=2025-01-01-preview
spring.ai.azure.openai.chat.options.model=your-chat-model
spring.ai.azure.openai.embedding.options.model=your-embedding-model
spring.ai.azure.openai.chat.options.deployment-name=your-chat-deployment
spring.ai.azure.openai.embedding.options.deployment-name=your-embedding-deployment

# Database Configuration
spring.datasource.url=jdbc:postgresql://your-host:5432/your-database
spring.datasource.username=your-username
spring.datasource.password=your-password

# Initialize schema and data
spring.sql.init.mode=always
spring.sql.init.schema-locations=classpath:schema.sql
spring.sql.init.data-locations=classpath:data.sql

# Datasource Configuration
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.hikari.maximum-pool-size=5

# Logging Configuration
logging.level.com.example.springaiapp=INFO
logging.level.org.springframework.ai=INFO
logging.level.org.springframework.jdbc.core=INFO
logging.level.com.azure=WARN
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

# Azure OpenAI specific logging
logging.level.com.azure.ai.openai=INFO
logging.level.com.azure.core=WARN
